{
    "package_version": 2,
    "version": "1.0.0",
    "name": "miles-editor-tool",
    "contributions": {
        "builder": "./dist/builder.js",
        "messages": {
            "formatProject": {
                "public": false,
                "methods": [
                    "formatProject"
                ]
            },
            "loadExcel": {
                "public": true,
                "methods": [
                    "loadExcel"
                ]
            },
            "genConst": {
                "public": true,
                "methods": [
                    "genConst"
                ]
            },
            "autoBind": {
                "public": true,
                "methods": [
                    "autoBind"
                ]
            }
        },
        "menu": [
            {
                "path": "MTools",
                "label": "格式化目录结构",
                "icon": "./static/icon.png",
                "message": "formatProject"
            },
            {
                "path": "MTools",
                "label": "导表",
                "icon": "./static/icon.png",
                "message": "loadExcel"
            },
            {
                "path": "MTools",
                "label": "生成常量",
                "icon": "./static/icon.png",
                "message": "genConst"
            }
        ],
        "shortcuts": [
            {
                "message": "loadExcel",
                "win": "ctrl+shift+l",
                "mac": "ctrl+shift+l"
            },
            {
                "message": "genConst",
                "win": "ctrl+shift+g",
                "mac": "ctrl+shift+g"
            }
        ]
    },
    "description": "miles的一些编辑器扩展",
    "main": "./dist/main.js",
    "devDependencies": {
        "@types/node": "^16.0.1",
        "typescript": "^4.3.4",
        "@types/fs-extra": "^11.0.4"
    },
    "author": "Miles",
    "editor": ">=3.6.3",
    "scripts": {
        "build": "tsc -b",
        "watch": "tsc -w"
    },
    "dependencies": {
        "fs-extra": "^11.2.0"
    }
}
